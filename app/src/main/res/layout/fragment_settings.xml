<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.enac.goshopping.fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Ne pas déranger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <Switch
                android:text="Activer le mode ne pas déranger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_do_not_disturb" />

            <TextView
                android:text="Notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <Switch
                android:text="Notifications basées sur l'emplacement géographique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_notif_location" />

            <Switch
                android:text="Notification basées sur le calendrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_notification_calendar" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
